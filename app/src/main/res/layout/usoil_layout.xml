<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Remember, WeightSum if want to specify number of units-->


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="@string/exports_to_venezuela"
                    android:textColor="#ff080c"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/ExportsVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/Exports2year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Exports3year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Exports4year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Exports5year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Exports6year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/VenTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="@string/imports_from_venezuela"
                    android:textColor="#1aff00"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/ImportsVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/Imports2year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Imports3year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Imports4year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Imports5year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/Imports6year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <com.shinobicontrols.charts.ChartView
                android:id="@+id/Chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/progress_bar"/>
</FrameLayout>